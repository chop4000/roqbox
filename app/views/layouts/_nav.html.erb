

<style type="text/css">

#nav_bar {

	background-color: #331189;
}

.arrow-left {
	width: 0; 
	height: 0; 
}

#roqbox_container {
	position: absolute;
	background-color: #ffffff;
	left: 0px;
	top: 0px;
	width: 32px;
	height: 32px;
	border: 8px solid #331189;
}

#roqbox_1 {
	position: relative;
	background-color: #331189;
	left: 8px;
	top: 16px;
	width: 8px;
	height: 16px;	
}

#roqbox_2 {
	position: relative;
	left: 8px;
	top: -8px;
	border-top: 8px solid transparent;
	border-right: 8px solid #331189; 
}

#roqbox_3 {
	position: relative;
	left: 8px;
	top: -25px;
	border-top: 8px solid #331189;
	border-right: 8px solid transparent; 
}

#roqbox_4 {
	position: absolute;
	background-color: #331189;
	left: 16px;
	top: 8px;
	width: 8px;
	height: 25px;	
}

#roqbox_5 {
	position: absolute;
	background-color: #331189;
	left: 24px;
	top: 0px;
	width: 8px;
	height: 40px;	
}

</style>

<div id="nav_bar" style="position: fixed; z-index: 2; width: 100%; height: 50px;">
	<ul class="nav nav-pills">
<!-- nav pills to come -->
	</ul>

	
		<div id="roqbox_container">
			<div id="roqbox_1"></div>
			<div id="roqbox_2" class="arrow-left"></div>
			<div id="roqbox_3" class="arrow-left"></div>
			<div id="roqbox_4"></div>
			<div id="roqbox_5"></div>
		</div>
	

	<div class="btn-group" style="position: absolute; top: 10px; right: 15px;">
		<% if user_signed_in? %>

		<button class="btn">
			<%= link_to "Profile", current_user %>
		</button>

		<button class="btn">
			<%= link_to "Logout", destroy_user_session_path, method: :delete %>
		</button>

		<% else %>

		<button class="btn">
			<%= link_to "Signup", new_user_registration_path %>
		</button>
		<button class="btn">
			<%= link_to "Login", new_user_session_path %>
		</button>
		
		<% end %>
	</div>

</div>